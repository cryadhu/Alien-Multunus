from AlienDetails import AlienDetails
class Totxt:
	alienDetails = AlienDetails()
	def __call__(self,alienDetails):
		self.alienDetails = alienDetails	
	def writeToDisk(self):
		fileObject=open("Alien Details.txt","a")
		fileObject.write("Code Name: "+ self.alienDetails.codename +"\n")
		fileObject.write("Blood Color : "+ self.alienDetails.bloodColor+"\n")
		fileObject.write("No. of Antenas: "+ self.alienDetails.noAntenas+"\n")
		fileObject.write("No. of Legs: "+ self.alienDetails.noLegs+"\n")
		fileObject.write("Home: "+ self.alienDetails.home+"\n")
		
		
	
